<div class="bg-black flex justify-between items-center px-2" data-controller="menu">
  <div class="flex items-center">
    <%= link_to products_path do %>
      <img src="<%= image_path('lobby/logo.png') %>" alt="Logo" class="w-16 h-16">
    <% end %>
    <h1 class="text-3xl font-bold ml-2">
      <%= t('app_name').split(' ').map.with_index { |word, index| index == 0 ? "<span class='text-white'>#{word}</span>" : "<span class='text-orange-500'>#{word}</span>" }.join(' ').html_safe %>
    </h1>
  </div>


  <button class="sm:hidden" data-action="click->menu#toggle">
    <%= image_tag 'icons/menu.svg', width: 35, height: 35 %>
  </button>

  <div class="hidden sm:block">
    <%= render partial: 'shared/items' %>
  </div>

  <!--Menu Movil-->
  <div class="gap-4 sm:hidden absolute bg-black top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full" data-menu-target="items">
    <button class="mb-4" data-action="click->menu#toggle">
      <%= image_tag 'icons/close.svg', width: 35, height: 35 %>
    </button>
    <%= render partial: 'shared/items' %>
  </div>
</div>
