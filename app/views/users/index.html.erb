<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Administrador</th>
      <th>Superadmin</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'Sí' : 'No' %></td>
        <td><%= user.superadmin? ? 'Sí' : 'No' %></td>
        <td>
          <%= link_to 'Editar', edit_user_path(user.username) %>
          <%= link_to 'Eliminar', users_path(user.username), method: :delete, data: { confirm: '¿Estás seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Crear Usuario', new_user_path %>
