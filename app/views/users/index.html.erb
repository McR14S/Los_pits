<h1 class="text-2xl font-bold mb-4">Lista de Usuarios</h1>

<table class="table-auto w-full">
  <thead>
    <tr>
      <th class="px-4 py-2">ID</th>
      <th class="px-4 py-2">Nombre</th>
      <th class="px-4 py-2">Email</th>
      <th class="px-4 py-2">Administrador</th>
      <th class="px-4 py-2">Superadmin</th>
      <th class="px-4 py-2">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="border px-4 py-2"><%= user.id %></td>
        <td class="border px-4 py-2"><%= user.username %></td>
        <td class="border px-4 py-2"><%= user.email %></td>
        <td class="border px-4 py-2"><%= user.admin? ? 'Sí' : 'No' %></td>
        <td class="border px-4 py-2"><%= user.superadmin? ? 'Sí' : 'No' %></td>
        <td class="border px-4 py-2">
          <%= link_to 'Eliminar', users_path(user.username), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full mr-2' %>
          <%= link_to 'Editar Perfil', edit_user_path(username: user.username), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
