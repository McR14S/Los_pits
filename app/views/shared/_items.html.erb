<%= link_to t('.lobby'), root_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" %>

<%= link_to t('.products'), products_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" %>

<%= link_to t('.aboutus'), about_us_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" %>

<%= link_to t('.add'), new_product_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all", data: { turbo_frame: "modal" } if Current.user %>

<%= link_to t('.favorites'), favorites_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" if Current.user %>

<%= link_to t('.categories'), categories_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" if Current.user&.admin? %>

<%= link_to t('.login'), new_session_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" unless Current.user %>

<%= link_to t('.register'), new_user_path, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" unless Current.user %>

<%= link_to t('.logout'), session_path(Current.user.id), data: {
  turbo_method: :delete,
  turbo_confirm: t('common.confirm')
}, class: "mx-2 text-white font-bold hover:scale-105 hover:underline hover:text-2xl hover:text-orange-500 transition-all" if Current.user %>
